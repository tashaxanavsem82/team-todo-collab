{
  "name": "team-todo-collab",
  "version": "1.0.0",
  "description": "A collaborative todo list application that allows teams to create, assign, and track tasks in real-time.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently 'npm run client' 'nodemon server.js'",
    "test": "echo 'Error: no test specified' && exit 1",
    "build": "npm run build --prefix client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^5.11.15",
    "socket.io": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "concurrently": "^6.2.0"
  }
}